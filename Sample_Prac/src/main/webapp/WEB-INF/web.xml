<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>Sample_Prac</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.jsp</welcome-file>
    <welcome-file>default.htm</welcome-file>
  </welcome-file-list>
  <!-- Context Param -->
  <context-param>
  	<param-name>error</param-name>
  	<param-value>InValid Credentials !!</param-value>
  </context-param>
  
  <!-- Validation Filter -->
  <filter>
  	<filter-name>Validation</filter-name>
  	<filter-class>sample.filter.ValidationFilter</filter-class>
  </filter>
  <filter-mapping>
  	<filter-name>Validation</filter-name>
  	<url-pattern>/login</url-pattern>
  </filter-mapping>
  
  <!-- LOGIN -->
  <servlet>
  	<servlet-name>Login</servlet-name>
  	<servlet-class>sample.prac.Login</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>Login</servlet-name>
  	<url-pattern>/login</url-pattern>
  </servlet-mapping>
  
  <!-- PROFILE -->
  <servlet>
  	<servlet-name>Profile</servlet-name>
  	<servlet-class>sample.prac.Profile</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>Profile</servlet-name>
  	<url-pattern>/profile</url-pattern>
  </servlet-mapping>
  
  <!-- LOGOUT -->
  <servlet>
  	<servlet-name>Logout</servlet-name>
  	<servlet-class>sample.prac.Logout</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>Logout</servlet-name>
  	<url-pattern>/logout</url-pattern>
  </servlet-mapping>
</web-app>